/* components/searchBox/searchBox.wxss */
.search-box{
  width: 100%;
  height: 88rpx;
  background: #fff;
  font-size: 32rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
}
.search{
  width: 85%;
  height:60rpx;
  /* margin: 0 auto; */
  margin-left: 25rpx;
  padding-left: 20rpx;
  background:rgba(240,240,240,1);
  border-radius:10rpx;
  transform: translateY(10rpx);
  font-size: 0;
  vertical-align: middle;
}
.search-btn {
  display: inline-block;
  color: #333333;
  height: 100%;
  width: 15%;
  /* flex:1; */
  /* line-height: 60rpx; */
  transform: translateY(10rpx);
  text-align: center;
  vertical-align: middle;
}
.search .search-img{
  height:60rpx;
  width: 73rpx;
  position: relative;
  float: left;

}
.search image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 32rpx;
  height: 32rpx;
}
.search input{
  float: left;
  width: calc(100% - 80rpx);
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
}